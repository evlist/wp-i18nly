# Local override for wp-i18nly development (safe across graft updates)

# Local plugin linking for bootstrap hooks
PLUGIN_SLUG=i18nly
PLUGIN_DIR=plugin

# Additional Plugins (comma-separated)
WP_PLUGINS=plugin-check,pexlechris-adminer

# GitHub workflows runtime defaults
WORKFLOWS_CI_ENABLED=true
WORKFLOWS_CI_BRANCHES=main
WORKFLOWS_CI_PLUGIN_DIR=plugin
WORKFLOWS_CI_TESTS=phpunit,wpcs,reuse,wpcheck
WORKFLOWS_CI_PHPUNIT_CONFIG=phpunit.xml
WORKFLOWS_CI_PHP_VERSION=8.3

WORKFLOWS_ZIP_ENABLED=true
WORKFLOWS_ZIP_BRANCHES=main
WORKFLOWS_ZIP_PLUGIN_DIR=plugin
WORKFLOWS_ZIP_EXCLUDE_PATTERNS=.git*,node_modules/*,.env*,tests/*,.github/*,.devcontainer/*
WORKFLOWS_ZIP_ARTIFACT_RETENTION=90
WORKFLOWS_ZIP_NIGHTLY_TAG=nightly
